# Path to your oh-my-zsh configuration.
ZSH=$HOME/.dotfiles/zsh/oh-my-zsh

if { [ -n "$TMUX" ]; } then
    tmux source-file ~/.tmux.conf > /dev/null
fi

# COMPLETION SETTINGS
# add custom completion scripts
fpath=(~/.zsh/completion $fpath)

ZSH_THEME="kphoen"

plugins=(git fabric docker pip python vagrant brew)

source $ZSH/oh-my-zsh.sh

# Customize to your needs...
export PATH=$PATH:/usr/lib/lightdm/lightdm:/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin:/usr/games

TERM=screen-256color

alias vim='/usr/local/Cellar/vim/7.4.712/bin/vim'

# Source virtualenvwrapper
if [ -f "/usr/local/bin/virtualenvwrapper.sh" ]; then
    export WORKON_HOME=$HOME/.virtualenvs
    source /usr/local/bin/virtualenvwrapper.sh
fi

alias tmuxa='tmux attach-session -t'
alias tmuxn='tmux new-session -s'
alias tmuxl='tmux list-sessions'

# Python
export PYTHONSTARTUP=~/.pythonstartup.py

export GIT_EDITOR=vim
export VISUAL=vim
export EDITOR=vim

export DEVELOPMENT_ROOT=$HOME/Development

if [ $VIRTUAL_ENV ]; then
    . "$VIRTUAL_ENV/bin/activate"
fi

export GOROOT=/usr/local/go
export GOPATH=$DEVELOPMENT_ROOT/workspace/gopath

export PATH=$PATH:$GOROOT/bin
export PATH=$PATH:$GOPATH/bin

export PATH=$PATH:$DEVELOPMENT_ROOT/tools/bin
export PATH=$PATH:$DEVELOPMENT_ROOT/tools/google-cloud-sdk/bin
export PATH=$PATH:$DEVELOPMENT_ROOT/tools/bin/kubernetes/platforms/darwin/amd64

export DOCKER_HOST=tcp://192.168.59.103:2376
export DOCKER_CERT_PATH=/Users/ktaube/.boot2docker/certs/boot2docker-vm
export DOCKER_TLS_VERIFY=1

source $DEVELOPMENT_ROOT/tools/google-cloud-sdk/completion.zsh.inc
