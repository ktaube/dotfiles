SHELL=/bin/zsh

# set locale
export LC_ALL=en_US.UTF-8
export LANG=en_US.UTF-8

export GIT_EDITOR=vim
export VISUAL=vim
export EDITOR=vim

# Customize to your needs...
export PATH=$PATH:/usr/lib/lightdm/lightdm:/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin

# Add python
export PATH=$PATH:~/Library/Python/2.7/bin

# Path to your oh-my-zsh configuration.
ZSH=$HOME/.dotfiles/zsh/oh-my-zsh

# if tmux session active source custom conf file
if { [ -n "$TMUX" ]; } then
    tmux source-file ~/.tmux.conf > /dev/null
fi

ZSH_THEME="kphoen"

plugins=(zsh-completion git)

source $ZSH/oh-my-zsh.sh

TERM=screen-256color

alias ta='tmux attach-session -t'
alias tn='tmux new-session -s'
alias tnn='TMUX= tmux new -d -s'
alias tl='tmux list-sessions'

alias sl='ls'
alias gs='git status'

export DEVELOPMENT_ROOT=$HOME/workspace
export DEV=$DEVELOPMENT_ROOT
export PATH=$PATH:$DEVELOPMENT_ROOT/bin

export SPARK_HOME=/usr/local/Cellar/apache-spark/2.2.0/libexec/

export GOPATH=$DEVELOPMENT_ROOT/go

# Add go bin dir to path
export PATH=$PATH:$GOPATH/bin

# gcloud
export PATH=$PATH:$DEV/bin/google-cloud-sdk/bin

function code {
    if [[ $# = 0 ]]
    then
        open -a "Visual Studio Code"
    else
        local argPath="$1"
        [[ $1 = /* ]] && argPath="$1" || argPath="$PWD/${1#./}"
        open -a "Visual Studio Code" "$argPath"
    fi
}

function tmuxssh {
    if [[ $# = 0 ]]
    then
        print "Provide server name"
    else
        local arg="$1"
        ssh $arg -t "tmux -CC attach || tmux -CC"
    fi
}

function resethosts {
    sudo -- sh -c "cat ~/.dotfiles/hosts > /etc/hosts"
}
