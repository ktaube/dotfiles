# Path to your oh-my-zsh configuration.
ZSH=$HOME/.dotfiles/zsh/oh-my-zsh

tmux source-file ~/.tmux.conf > /dev/null

# COMPLETION SETTINGS
# add custom completion scripts
fpath=(~/.zsh/completion $fpath)

# Set name of the theme to load.
# Look in ~/.oh-my-zsh/themes/
# Optionally, if you set this to "random", it'll load a random theme each
# time that oh-my-zsh is loaded.

ZSH_THEME="kphoen"

plugins=(git)

source $ZSH/oh-my-zsh.sh

# Customize to your needs...
export PATH=$PATH:/usr/lib/lightdm/lightdm:/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin:/usr/games

# Additional $PATH variables
export PATH=$PATH:/home/ktaube/Development/tools/android-studio/sdk/tools
export PATH=$PATH:/home/ktaube/Development/tools/android-studio/sdk/platform-tools

TERM=screen-256color

# Source virtualenvwrapper
if [ -f "/usr/local/bin/virtualenvwrapper.sh" ]; then
    export WORKON_HOME=$HOME/.virtualenvs
    source /usr/local/bin/virtualenvwrapper.sh
fi

if hash xclip 2>/dev/null; then
    alias xclip="xclip -selection c"
fi

if [ -f "$HOME/Tools/scripts/fabfile.py" ]; then
    alias ngauto="nocorrect fab -f $HOME/Tools/scripts/fabfile.py"
fi

alias tmuxa='tmux attach-session -t'
alias tmuxn='tmux new-session -s'
alias tmuxl='tmux list-sessions'

# Python
export PYTHONSTARTUP=~/.pythonstartup.py

if [ x`which ack-grep` != x ]; then
  alias ack=ack-grep
fi

export GIT_EDITOR=vim
export VISUAL=vim
export EDITOR=vim

if [ $VIRTUAL_ENV ]; then
    . "$VIRTUAL_ENV/bin/activate"
fi

export PATH=$PATH:$HOME/Development/tools/go/bin
export GOPATH=$HOME/Development/workspace/go
export GOROOT=$HOME/Development/tools/go
