"""""""""""""""""""""""""""""
" Plugins
"""""""""""""""""""""""""""""
" Powerline
let g:Powerline_symbols = 'fancy'

" Ctags.
set tags=~/.mytags
set tags=./tags;$HOME

" NERDtree.
map <F6> :NERDTreeToggle<cr>

" TagBar
nmap <F7> :TagbarToggle<CR>

" Colorscheme
syntax enable
    set background=light
set t_Co=256
colorscheme solarized

" Pathogen.
execute pathogen#infect()


"""""""""""""""""""""""""""""
" Settings
"""""""""""""""""""""""""""""
" Relode .vimrc.
map <silent> <F12> :source ~/.vimrc<cr>

" Jump between splits easely.
nmap <silent> <c-k> :wincmd k<CR>
nmap <silent> <c-j> :wincmd j<CR>
nmap <silent> <c-h> :wincmd h<CR>
nmap <silent> <c-l> :wincmd l<CR>

" Disable arrow keys
map <Left> <Nop>
map <Right> <Nop>
map <Up> <Nop>
map <Down> <Nop>

" Paste toogle.
set pastetoggle=<F10>

" Remap column symbol to semicolin.
nore ; :
nore , ;

" Common typo fixes.
:command WQ wq
:command Wq wq
:command W w
:command Q q

iab anf and
iab adn and
iab ans and
iab teh the
iab thre there

" Common settings.
set number
set smartcase
set ignorecase
set laststatus=2
set incsearch
set hlsearch
set confirm
set modeline
set tabstop=8
set expandtab
set softtabstop=4
set shiftwidth=4
set encoding=utf-8
set autowrite
set lazyredraw
set mousemodel=popup
set scrolloff=2
set visualbell
set virtualedit=block
set wildmode=longest:full,full
set wildignore+=tags
set winaltkeys=no
filetype indent on
filetype on
filetype plugin indent on
hi CursorLine term=none cterm=none ctermbg=0      " adjust color
set mouse=a
map <F8> :set mouse=r<cr>
map <F9> :set mouse=a<cr>
set title
set titlestring=VIM:\ %F
set backupdir=~/.backup,.,/tmp
set directory=~/.backup,/tmp
set splitbelow
set splitright

if exists('+colorcolumn')
    set colorcolumn=80
endif

if v:version >= 600
    set foldmethod=marker
    set printoptions=paper:letter
    set sidescrolloff=5
    set mouse=nvi
endif

nnoremap <Leader>m :w <BAR> !make -C ~/Desktop/ciparnica css<CR><space>
