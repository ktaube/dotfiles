"""""""""""""""""""""""""""""
" Plugins
"""""""""""""""""""""""""""""
" Powerline
let g:Powerline_symbols = 'fancy'

" Colorscheme
syntax enable
    set background=light
set t_Co=256
colorscheme solarized

" Pathogen.
execute pathogen#infect()

" Unite
let g:unite_source_history_yank_enable = 1
call unite#filters#matcher_default#use(['matcher_fuzzy'])
nnoremap <leader>e :<C-u>Unite -buffer-name=buffer  buffer<cr>

" vim-airline
let g:airline_powerline_fonts = 1

" vim-ctrlp
let g:ctrlp_max_files = 0
let g:ctrlp_max_depth = 100

" vim-gitgutter
" disable plugins keymaps
let g:gitgutter_map_keys = 0
map <F5> :GitGutterToggle<cr>

"""""""""""""""""""""""""""""
" Settings
"""""""""""""""""""""""""""""
" Relode .vimrc.
map <silent> <F12> :source ~/.vimrc<cr>

" Jump between splits easely.
nmap <silent> <c-k> :wincmd k<CR>
nmap <silent> <c-j> :wincmd j<CR>
nmap <silent> <c-h> :wincmd h<CR>
nmap <silent> <c-l> :wincmd l<CR>

" Disable arrow keys
map <Left> <Nop>
map <Right> <Nop>
map <Up> <Nop>
map <Down> <Nop>

map <F8> :set mouse=r<cr>
map <F9> :set mouse=a<cr>

" Remap column symbol to semicolin.
nore ; :
nore , ;

" Common typos fixes.
:command WQ wq
:command Wq wq
:command W w
:command Q q

iab anf and
iab adn and
iab ans and
iab teh the
iab thre there

" Common settings.
set number
set smartcase
set ignorecase
set laststatus=2
set incsearch
set hlsearch
set confirm
set modeline
set tabstop=8
set expandtab
set softtabstop=4
set shiftwidth=4
set encoding=utf-8
set autowrite
set lazyredraw
set mousemodel=popup
set scrolloff=2
set visualbell
set virtualedit=block
set wildmode=longest:full,full
set wildignore+=tags
set winaltkeys=no
set title
set titlestring=VIM:\ %F
set backupdir=~/.backup,.,/tmp
set directory=~/.backup,/tmp
set splitbelow
set splitright

if v:version >= 600
    set foldmethod=marker
    set printoptions=paper:letter
    set sidescrolloff=5
    set mouse=nvi
endif

filetype on
filetype indent on
filetype plugin indent on
hi CursorLine term=none cterm=none ctermbg=0      " adjust color
set mouse=a

if exists('+colorcolumn')
    set colorcolumn=80
endif
